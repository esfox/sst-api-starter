{
  "name": "sst-template",
  "version": "0.0.1",
  "type": "module",
  "description": "SST API template",
  "author": "sabarillo.charles@gmail.com",
  "license": "MIT",
  "scripts": {
    "sst": "sst",
    "dev": "sst dev",
    "build": "sst build",
    "build:dev": "sst build --stage dev",
    "build:staging": "sst build --stage staging",
    "build:prod": "sst build --stage prod",
    "deploy": "sst deploy",
    "deploy:dev": "sst deploy --stage dev",
    "deploy:staging": "sst deploy --stage staging",
    "deploy:prod": "sst deploy --stage prod",
    "remove": "sst remove",
    "remove:dev": "sst remove --stage dev",
    "remove:staging": "sst remove --stage staging",
    "remove:prod": "sst remove --stage prod",
    "console": "sst console",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --fix --ext .js,.ts,.jsx,.tsx",
    "lint:types": "tsc --noEmit",
    "lint:spell": "git diff --cached --name-only | npx cspell --no-summary --no-progress --no-must-find-files --file-list stdin",
    "lint:all": "concurrently \"pnpm lint\" \"pnpm lint:types\" \"pnpm lint:spell\"",
    "ci:lint": "pnpm recursive run lint:all",
    "pre-commit": "concurrently \"lint-staged --allow-empty\" \"pnpm lint:spell\"",
    "prepare": "husky install",
    "cli": "bread"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@bread/cli": "github:esfox/bread-cli",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/aws-lambda": "^8.10.126",
    "@types/node": "^20.9.1",
    "@types/pg": "^8.10.9",
    "@types/swagger-jsdoc": "^6.0.3",
    "aws-cdk-lib": "2.103.1",
    "concurrently": "^8.2.2",
    "constructs": "10.3.0",
    "cspell": "^7.3.8",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "sst": "^2.32.2",
    "swagger-jsdoc": "^6.2.8",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@middy/core": "^5.0.2",
    "@middy/http-error-handler": "^5.0.2",
    "@middy/http-json-body-parser": "^5.0.2",
    "http-status-codes": "^2.3.0",
    "kysely": "^0.26.3",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  }
}
